<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_text_light"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/timeEntryPositionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/timeEntryTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/timeEntryPositionView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/timeEntryDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="12/31/19"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/timeEntryTimeView"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>